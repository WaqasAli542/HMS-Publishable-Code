@model Hotel_Management_System.Models.Customer

@{
    ViewBag.Title = "addCustomer";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="main-content-inner">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Customer</a>
            </li>
            <li class="active">Add Customers</li>
        </ul><!-- /.breadcrumb -->

    </div>
    <div class="page-header">
        <h1>
            Reservation 
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Manage Reservations
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="page-content">
        <div class="row">

                @using (Html.BeginForm("addCustomer", "Reservation", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Add Customer</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_name, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_name, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Employee_id, "Employee_id", htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.DropDownList("Employee_id", null, htmlAttributes: new { @class = "col-xs-10 col-sm-5", required = "required" })
                                @Html.ValidationMessageFor(model => model.Employee_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_email, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_email, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_cnic, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_cnic, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_cnic, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_city, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_city, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_city, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_country, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_country, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_country, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_nationality, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_nationality, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_nationality, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Customer_Profession, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Customer_Profession, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Customer_Profession, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-info" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Next
                                </button>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
      </div>
</div>