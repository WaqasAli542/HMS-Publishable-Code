@model IEnumerable<Hotel_Management_System.Models.Reservation>

@{
    //List<Hotel_Management_System.Models.Reservation> temp = Model;

    //temp[0].Room_Reservation.ToList()[0].Room.Room_no

    //var temp3=temp.ToList().Select(x=>new Object(x.Reservation_to)

    ViewBag.Title = "listOfReservation";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}
@using Hotel_Management_System.Models;
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">List Of Reservations</h3>
            <p>
                @Html.ActionLink("Create New", "addReservation")
            </p>
            <div class="clearfix">
                <div class="pull-right tableTools-container"></div>
            </div>
            <div class="table-header">
                Results for "Latest Registered Customers"
            </div>


            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer.Customer_name)

                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservation_from)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservation_to)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservation_members)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservation_Status)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
            {
            <tr>
                <td>
                    <b><a href="@Url.Action("detailOfReservation","Reservation",new { id = item.Reservation_id})">@item.Customer.Customer_name</a></b>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reservation_from)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reservation_to)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reservation_members)
                </td>
                <td class="hidden-480">
                    @if (item.Reservation_Status == "Active")
                {
                <span class="badge badge-danger">@Html.DisplayFor(modelItem => item.Reservation_Status)</span>
                    }
                    else
                    {
                    <span class="badge badge-success">@Html.DisplayFor(modelItem => item.Reservation_Status)</span>
                    }

                </td>
                <td>
                    <div class="hidden-sm hidden-xs action-buttons">
                        <a class="blue" href="#">
                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                        </a>

                        <a class="green" href="#">
                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                        </a>

                        <a class="red" href="#">
                            <i class="ace-icon fa fa-trash-o bigger-130"></i>
                        </a>
                    </div>

                    <div class="hidden-md hidden-lg">
                        <div class="inline pos-rel">
                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                <li>
                                    <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                        <span class="blue">
                                            <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                        <span class="green">
                                            <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                        </span>
                                    </a>
                                </li>

                                <li>
                                    <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                        <span class="red">
                                            <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
