@model IEnumerable<Hotel_Management_System.Models.Item>

@{
    ViewBag.Title = "listOfItem";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<h2>listOfItem</h2>

<p>
    @Html.ActionLink("Create New", "addItem")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "editItem", new { id=item.Item_Id }) |
            @Html.ActionLink("Details", "detailOfItem", new { id=item.Item_Id }) |
            @Html.ActionLink("Delete", "removeItem", new { id=item.Item_Id })
        </td>
    </tr>
}

</table>
