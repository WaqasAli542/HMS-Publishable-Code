@model Hotel_Management_System.Models.Room_Category

@{
    ViewBag.Title = "addRoom_Category";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="main-content-inner">
    <div class="breadcrumbs ace-save-state" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="#">Home</a>
            </li>
            <li class="active">Dashboard</li>
        </ul><!-- /.breadcrumb -->

    </div>
    <div class="page-header">
        <h1>
            Room Management
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                Add Employee and manage salaries
            </small>
        </h1>
    </div><!-- /.page-header -->
    <div class="page-content">
        <div class="row">
            <div class="col-xs-12">

                @using (Html.BeginForm("addRoom_Category", "RoomManagement", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Room_Category</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Category_Name, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Room_Rent, htmlAttributes: new { @class = "col-sm-3 control-label  no-padding-right" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Room_Rent, new { htmlAttributes = new { @class = "col-xs-10 col-sm-5", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Room_Rent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn btn-info" type="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Create
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "listOfRoom_Category")
                </div>
                </div>
            </div>
        </div>
    </div>
